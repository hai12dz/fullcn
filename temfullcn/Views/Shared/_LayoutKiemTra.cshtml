    <style>
        /* Phân trang */
        .product__pagination {
            text-align: center;
            margin-top: 20px;
        }

            .product__pagination ul {
                display: inline-flex;
                padding: 0;
                margin: 0;
                list-style: none;
            }

            .product__pagination li {
                margin: 0 3px; /* giảm khoảng cách giữa các phân trang */
            }

            .product__pagination a,
            .product__pagination span {
                padding: 4px 8px; /* giảm padding */
                text-decoration: none;
                border: 1px solid #ddd;
                border-radius: 3px; /* làm bo tròn nhỏ hơn */
                color: #333;
                background-color: #f1f1f1;
                font-size: 12px; /* giảm kích thước font */
            }

                .product__pagination a:hover,
                .product__pagination .current {
                    background-color: #007bff;
                    color: #fff;
                }

            .product__pagination .current {
                font-weight: bold;
            }
    </style>
</head>
